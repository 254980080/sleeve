.container {
  width: 340rpx;
  display: flex;
  flex-direction: column;
  background: #fff;
  margin-bottom: 30rpx;
  box-shadow: 0 0 8px 0 rgba(119, 163, 149, 0.2)
}
.content-container {
  padding: 16rpx 16rpx 22rpx 16rpx;
  display: flex;
  flex-direction: column;
}
.l-tag {
  background: #dcebe6 !important;
  color: #157658 !important;
  height: 36rpx !important;
  padding-left: 6rpx !important;
  padding-right: 6rpx !important;
  margin-right: 5rpx !important;
}
.title {
  font-size: 28rpx;
  color: #333;
}
.tags {
  display: flex;
  flex-direction: row;
  margin-top: 6rpx;
  margin-bottom: 8rpx;
  flex-wrap: wrap;
}
.price-row {
  display: flex;
  flex-direction: row;
}
.discount-price {
  margin-left: 20rpx;
}
.subtitle {
  font-size: 24rpx;
  font-weight: 300;
  color: #888;
  margin-top: 6rpx;
}