/* components/spu-scroll/index.wxss */
.container {
  box-sizing: border-box;
  width: 100%;
  background: #fff;
  padding: 42rpx 0 34rpx 28rpx;
}
.title {
  width: 694rpx;
  height: 90rpx;
}
.scroll-view {
  margin-top: 28rpx;
  display: flex;
  flex-direction: row;
}
.inner {
  display: flex;
  flex-direction: row;
}
.spu-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 60rpx;
}
.spu-img {
  width: 160rpx;
  height: 160rpx;
}
.spu-text {
  font-size: 20rpx;
  color: #666;
  margin-top: 20rpx;
}
.price-unit {
  font-size: 24rpx !important;
  color: #157658 !important;
}
.price-value {
  font-size: 26rpx !important;
  color: #157658 !important;
}