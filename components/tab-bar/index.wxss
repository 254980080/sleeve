
.sleeve {
  font-family: sleeve !important;
  color: #157658 !important;
}
.container {
  height: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  background: #fff;
}
.icons {
  display: flex;
  flex-direction: row;
  width: 230rpx;
  height: 100%;
  padding-left: 16rpx;
  padding-right: 22rpx;
  justify-content: space-around;
  color: #999;
  align-items: center;
  box-sizing: border-box;
}
.icons > view {
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.icons > view:nth-child(2) {
  padding-top: 6rpx;
}
.icons text {
  font-size: 20rpx;
}
.cart {
  background: #333;
  width: 260rpx;
  height: 100%;
}
.buy {
  background: #157658;
  width: 260rpx;
  height: 100%;
}
.btn-font {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 32rpx;
}