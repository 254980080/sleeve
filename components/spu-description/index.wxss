.container {
  padding: 34rpx 30rpx 26rpx 30rpx;
  background: #fff;
  display: flex;
  direction: row;
  justify-content: space-between;
}
.left {
  display: flex;
  flex-direction: column;
  flex: 1
}
.tags {
  display: flex;
}
.l-tag {
  margin-right: 6rpx !important;
}
.subtitle {
  color: #999;
  font-size: 26rpx;
  font-weight: 400;
  margin-top: 40rpx;
  margin-bottom: 16rpx;
}
.price-row {
  display: flex;
  flex-direction: row;
  align-items: baseline;
}
.l-price-unit {
  margin-right: 14rpx !important;
}
.discount-price {
  margin-left: 20rpx;
  margin-right: 80rpx;
}
.discount-tag {
  width: 50rpx;
  border-radius: 20rpx !important;
  position: relative !important;
  bottom: 4rpx;
}
.right {
  display: flex;
  width: 78rpx;
  height: 120rpx;
  justify-content: flex-end;
  flex-direction: row;
  border-left: 2px dashed #f5f5f5;
  margin-left: 20rpx;
}
.inner {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #dcebe6;
  width: 50rpx;
  height: 120rpx;
}
.inner text {
  font-size: 24rpx;
  color: #157658;
}