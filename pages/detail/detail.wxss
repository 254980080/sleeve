
.top {
  width: 100%;
  height: 680rpx;
}
.sku-pending {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  height: 80rpx;
  line-height: 80rpx;
  color: #999;
  padding: 0 30rpx;
  margin: 10rpx 0;
  font-size: 28rpx;
}
.specs > text:nth-child(1) {
  color: #999;
  font-size: 24rpx;
}
.specs > text:nth-child(2) {
  color: #157658;
  font-size: 28rpx;
}
.explain {
  background: #fff;
  margin-top: 10rpx;
  padding: 20rpx;
}
.detail-img-container {
  display: flex;
  flex-direction: column;
}
.detail-img {
  width: 100%;
  display: flex;
}
.tabbar {
  position: fixed;
  bottom: 0;
}