page {
  background: #fff;
}
.input {
  border-radius: 0 !important;
}
.header {
  background: #fff;
  border-bottom: 1px solid #f3f3f3;
  padding-bottom: 14rpx;
  position: fixed;
  z-index: 777;
  top: 0;
  width: 750rpx;
}
.container {
  padding-top: 70rpx;
}
.history-container {
  display: flex;
  flex-direction: column;
}
.history-title {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 38rpx;
}
.slide {
  width: 8rpx;
  height: 46rpx;
  background: #157658;
  margin-right: 22rpx;
}
.history-title text {
  font-size: 28rpx;
  color: #333;
}
.icon {
  margin: 32rpx;
}
.history-tags {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
  width: 100%;
  box-sizing: border-box;
  padding-left: 30rpx;
  margin-top: 20rpx;
}
.tag {
  background: #f3f3f3 !important;
  color: #666 !important;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.tag-selected {
  background: #DCEBE6 !important;
  color: #157658 !important;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}